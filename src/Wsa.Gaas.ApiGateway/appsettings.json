{
  "OpenIdConnectOptions": {
    "Authority": "https://dev-1l0ixjw8yohsluoi.us.auth0.com",
    "CallbackPath": "/login/oauth2/code/auth0",
    "ResponseType": "code",
    "Scope": [ "openid", "profile", "email", "offline_access" ],
    "SaveTokens": true
  },
  "CookieAuthenticationOptions": {
    "ExpireTimeSpan": "01:00:00", 
    "SlidingExpiration": true,
    "Cookie": {
      "Name": "auth",
      "SameSite": "Lax"
    }
  },
  "FrontendOptions": {
    "Url": "http://localhost:3000/auth/token/{0}",
    "Providers": [
      "google-oauth2",
      "github",
      "linkedin",
      "discord"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "lobby-api-route": {
        "ClusterId": "lobby-api-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "{**catch-all}"
        }
      },
      "lobby-websocket-route": {
        "ClusterId": "lobby-websocket-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "/socket.io"
        }
      }
    },
    "Clusters": {
      "lobby-api-cluster": {
        "Destinations": {
          "lobby-api": {
            "Address": "https://api.gaas.waterballsa.tw"
          }
        }
      },
      "lobby-websocket-cluster": {
        "Destinations": {
          "lobby-api": {
            "Address": "https://api.gaas.waterballsa.tw"
          }
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
